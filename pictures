using System;

namespace HomeWork3
{
    class Program
    {
        static void Main(string[] args)
        {
            int picture = 52;
            int pictureInRow = 3;
            int fullPicturse;
            int overFull;
            fullPicturse = picture / pictureInRow;
            overFull = picture % pictureInRow;
            Console.WriteLine(fullPicturse + " полностью заполненых рядов с картиками");
            Console.WriteLine(overFull + " картинок сверх меры");
        }
    }
}
