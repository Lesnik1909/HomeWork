using System;
using System.Collections.Generic;


namespace List
{
    class Program
    {
        static int ConvertStringToInt(string userInput)
        {
            if (int.TryParse(userInput, out int result))
            {
                return result;
            }
            else
            {
                Console.WriteLine("Введено не число");
                Console.ReadKey();
                return result;
            }
        }
        static void Main(string[] args)
        {
            List<int> numbers = new List<int>();
            string userInput;
            int sum;

            while (true)
            {
                Console.Clear();
                Console.WriteLine("Команда exit для выхода из программы\nКоманда sum выводит сумму всех введенных чисел");
                Console.Write("Введите число: ");
                userInput = Console.ReadLine();
                if (userInput == "exit")
                    break;
                if (userInput == "sum")
                {
                    sum = 0;
                    for (int i = 0; i < numbers.Count; i++)
                    {
                        sum += numbers[i];
                    }
                    Console.WriteLine("Сумма введеных чисел равна " + sum);
                    Console.ReadKey();
                }
                else
                {
                    numbers.Add(ConvertStringToInt(userInput));
                }
            }
        }
    }
}
