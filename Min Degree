using System;

namespace HomeWork3
{
    class Program
    {
        static void Main(string[] args)
        {
            int randomNumber;
            int rangeStart = 1;
            int rangeFinish = 100;
            int baseOfDegree = 2;
            int resultOfDegree = baseOfDegree;
            int degree = 1;

            Random rand = new Random();
            randomNumber = rand.Next(rangeStart, rangeFinish);
            Console.WriteLine($"Случайное число: {randomNumber}");

            while (true)
            {
                if (resultOfDegree > randomNumber)
                {
                    break;
                }
                degree++;
                resultOfDegree *= baseOfDegree;
            }

            Console.WriteLine($"\nМинимальная степень {baseOfDegree}: {degree}");
        }
    }
}
