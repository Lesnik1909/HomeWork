using System;

namespace MyHomeWork
{
    class Program
    {
        static void DrawBar(int value, int maxValue, ConsoleColor color, int position)
        {
            ConsoleColor defaultColor = Console.BackgroundColor;
            string bar = "";
            for (int i = 0; i < value; i++)
            {
                bar += '#';
            }
            Console.SetCursorPosition(0, position);
            Console.Write('[');
            Console.BackgroundColor = color;
            Console.Write(bar);
            Console.BackgroundColor = ConsoleColor.Red;
            bar = "";

            for (int i = value; i < maxValue; i++)
            {
                bar += '_';
            }
            Console.Write(bar);
            Console.BackgroundColor = defaultColor;
            Console.Write("]");
        }
        static void Main(string[] args)
        {
            int health = 4, maxHelth = 10;
            int mana = 6, maxMana = 10;
            DrawBar(health, maxHelth, ConsoleColor.Green, 0);
            DrawBar(mana, maxMana, ConsoleColor.Blue, 1);

        }
    }
}
